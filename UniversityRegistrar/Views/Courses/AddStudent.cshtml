@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course
<div class="container">
<br>
<h2>Add a Student</h2>

<h4>Enroll a Student in this Course: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CourseId)

    @Html.Label("Select Student")
    @Html.DropDownList("StudentId")

    <input type="submit" value="Save" />
}
<br>
<p>@Html.ActionLink("Back to Courses", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>