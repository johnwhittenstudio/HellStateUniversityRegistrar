@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course
<div class="container">
<br>
<h2>Edit</h2>

<h4>Edit this course: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.CourseId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.CourseNumber)
  @Html.TextBoxFor(model => model.CourseNumber)

  <input type="submit" value="Save" />
}
<br>
<p>@Html.ActionLink("Back to Courses", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>