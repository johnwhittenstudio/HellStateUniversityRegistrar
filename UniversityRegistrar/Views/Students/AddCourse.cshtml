@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student
<div class="container">
<br>
<h2>Enroll in a Course</h2>

<h4>Enroll this student in a course: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StudentId)

  @Html.Label("Select Course")
  @Html.DropDownList("CourseId")

  <input type="submit" value="Save" />
}
<br>
<p>@Html.ActionLink("Back to Students", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>