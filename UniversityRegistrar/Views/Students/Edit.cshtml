@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student
<div class="container">
<br>
<h2>Edit</h2>

<h4>Edit this Student: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StudentId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)

  @Html.LabelFor(model => model.Enrolled)
  @Html.TextBoxFor(model => model.Enrolled)

  @Html.Label("Select course")
  @Html.DropDownList("CourseId", "CourseName")

  <input type="submit" value="Save" />
}
<br>
<p>@Html.ActionLink("Back to Students", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>